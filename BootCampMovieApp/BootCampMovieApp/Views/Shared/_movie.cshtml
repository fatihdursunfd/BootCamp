@model Movie

<div class="card mb-3">
    <div class="row">
        <div class="col-md-3">
            <img src="~/img/@Model.ImageUrl" alt="@Model.Title" class="img-fluid"/>
        </div>
        <div class="col-md-9">
            <h5 class="card-title">@Model.Title</h5>
            <div>
                <a class="btn btn-primary" asp-controller="Movies" asp-action="Details" asp-route-id="@Model.MovieId">Detaya Git</a>
                <a class="btn btn-warning" asp-controller="Movies" asp-action="Edit" asp-route-id="@Model.MovieId">Düzenle</a>
                <form asp-controller="Movies" asp-action="Delete" method="post" style="display:inline;">
                    <input type="hidden" name="Title" value="@Model.Title" />
                    <input type="hidden" name="MovieId" value="@Model.MovieId" />
                    <button class="btn btn-danger" type="submit">Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>
