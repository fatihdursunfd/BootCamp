@model Movie

@{
    ViewBag.Title = "Düzenle";
    Layout = "_Layout";
}

<div>
    <h4>Film Düzenle</h4>
    <form method="post" asp-action="Edit">
        <input type="hidden" name="MovieId" value="@Model.MovieId" />
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" value="@Model.Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" value="@Model.Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" class="form-control" value="@Model.ImageUrl" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Düzenle</button>
    </form>
    <div>
        <a asp-action="List">Listeye Dön</a>
    </div>
</div>